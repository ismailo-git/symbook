{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!
{% endblock %}

{% block body %}

	<section class="text-gray-600 body-font">
		<div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">

			<h1 class="text-center mb-6 text-2xl text-gray-500">{{category.name}}
				-
				{{category.books.count()}}
				Resultat(s)</h1>

			<div class="flex flex-wrap gap-4 gap-y-20 justify-center items-center">

				{% for book in category.books %}
					<div class="flex max-w-md bg-white shadow-md rounded-md overflow-hidden">
						<div class="w-2/5 h-52">
							<a href="{{path('show_book', {'category_slug': category.slug, 'slug': book.slug})}}" class="block relative h-full rounded overflow-hidden">

								<img alt="ecommerce" class="object-cover h-full w-full block" src="/uploads/books/{{book.imagePath}}">
							</a>

						</div>
						<div class="w-2/3 p-4">
							<h1 class="text-gray-900 font-bold text-2xl">
								{{book.title}}
							</h1>
							<p class="mt-2 text-gray-600 text-sm">
								{{book.description}}
							</p>
							<div class="flex item-center justify-between mt-3">
								<h1 class="text-gray-700 font-bold text-xl">
									{{book.price / 100}}
									â‚¬
								</h1>
								{# <a href="{{path('cart_add', {"id":book.id})}}" class="bg-green-500 font-semibold p-3 mt-5 text-white rounded-sm">Ajouter au
																	<i class="fa-solid fa-cart-arrow-down"></i>
																</a> #}
							</div>
						</div>
					</div>


				{% endfor %}
			</div>
		</div>
	</section>


{% endblock %}
