{% extends 'base.html.twig' %}

{% block title %}SymBook: Connexion
{% endblock %}

{% block body %}

	<div class="w-full max-w-sm p-6 m-auto bg-white rounded-md shadow-md dark:bg-gray-800 mt-12">
		<h1 class="text-3xl font-semibold text-center text-gray-700 dark:text-white">Se connecter</h1>

		<form method="post" class="mt-4">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.email }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}
			<div>
				<label class="block text-lg text-gray-800 dark:text-gray-200 font-semibold">E-mail</label>
				<input id="inputEmail" type="text" value="{{ last_username }}" name="email" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40" placeholder="Adresse E-mail">
			</div>

			<div class="mt-4">
				<div class="flex items-center justify-between">
					<label class="block text-lg text-gray-800 dark:text-gray-200 font-semibold">Mot de passe</label>
					<a href="#" class="text-lg text-gray-600 dark:text-gray-400 hover:underline">Mot de passe oublié ?</a>
				</div>

				<input id="inputPassword" type="password" name="password" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40" placeholder="Mot de passe">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			</div>

			<div class="mt-6">
				<button type="submit" class="w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600 font-semibold text-lg">
					Se connecter
				</button>
			</div>
		</form>
		<p class="mt-8 text-lg font-light text-center text-gray-400">Pas encore compte ?
			<a href="{{path('app_register')}}" class="font-medium text-gray-700 dark:text-gray-200 hover:underline">En créer un</a>
		</p>
	</div>

{% endblock %}
