{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="w-full max-w-sm p-6 m-auto bg-white rounded-md shadow-md dark:bg-gray-800 mt-4">
		<h1 class="text-3xl font-semibold text-center text-gray-700 dark:text-white">S'inscrire</h1>

		{{form_start(registrationForm) }}
		<div class="mt-2">
			<div class="mt-4">
				<div>
					{{form_widget(registrationForm.firstname, {'attr': {'class': 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40"'}})}}
					<div class="text-red-500 font-semibold text-xs bg-white">{{ form_errors(registrationForm.firstname) }}
					</div>
				</div>
			</div>
			<div class="mt-4">
				<div class="">
					{{form_widget(registrationForm.lastname, {'attr': {'class': 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40'}})}}
					<div class="text-red-500 font-semibold text-xs bg-white">{{ form_errors(registrationForm.lastname) }}</div>

				</div>
			</div>

			<div class="mt-4">
				<div>
					{{form_widget(registrationForm.email, {'attr': {'class': 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40'}})}}
					<div class="text-red-500 font-semibold text-xs bg-white">{{ form_errors(registrationForm.email) }}</div>
				</div>
			</div>

			<div class="mt-4">
				<div>
					{{form_widget(registrationForm.plainPassword, {'attr' : {'class': 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40'}})}}
					<div class="text-red-500 font-semibold text-xs bg-white">{{ form_errors(registrationForm.plainPassword) }}</div>
				</div>
			</div>
			<div class="mt-4">
				<div>
					{{form_widget(registrationForm.agreeTerms, {'attr' : {'class': 'bg-gray-100 border border-gray-200 rounded py-1 px-2 block focus:ring-blue-500 focus:border-blue-500 text-gray-700'}})}}
					{{form_label(registrationForm.agreeTerms, "J'accepte les conditions générales d'utilisation", {'label_attr': {"class": 'text-sm text-gray-700 block mb-1 font-medium'}})}}
					<div class="text-red-500 font-semibold text-xs bg-white">{{ form_errors(registrationForm.agreeTerms) }}</div>
				</div>
			</div>

			<div class="mt-6">
				<button type="submit" class="w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600">
					S'inscrire
				</button>
			</div>
		</div>
		{{ form_end(registrationForm) }}
		<p class="mt-8 text-xs font-light text-center text-gray-400">
			Don't have an account?
			<a href="#" class="font-medium text-gray-700 dark:text-gray-200 hover:underline">Create One</a>
		</p>
	</div>

{% endblock %}
